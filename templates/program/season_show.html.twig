{% extends 'base.html.twig' %}
{% block body %}
    <h3>Liste des épisodes de la série {{ program.title }} :</h3>
    <h4>Saison {{ season.number }} : </h4>
    <p>{{ season.year }}</p>
    {% for episode in season.episodes %}
        <li>
            <ul>
                <h4>{{ episode.number }} | <a href="{{ path('program_episode_show',
                        { programSlug: program.slug, seasonId: season.id, episodeSlug: episode.slug }) }}">{{ episode.title }}</a></h4>
            </ul>
        </li>
    {% endfor %}
    <a href="{{ path('program_index', { programSlug: program.slug }) }}">Retour</a>
    <a href="{{ path('episode_index') }}">Create new</a>
{% endblock %}